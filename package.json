{
  "name": "mermaid-preview",
  "displayName": "Mermaid Preview with Themes",
  "description": "Preview Mermaid diagrams with custom theme selection independent of VSCode theme",
  "version": "0.0.1",
  "publisher": "onlyutkarsh",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "mermaid",
    "preview",
    "diagram",
    "markdown",
    "theme"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/onlyutkarsh/mermaid-preview-extension.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "contributes": {
    "commands": [
      {
        "command": "mermaid-preview.showPreview",
        "title": "Mermaid: Open Preview",
        "icon": {
          "light": "media/mermaid-gutter.svg",
          "dark": "media/mermaid-gutter.svg"
        }
      },
      {
        "command": "mermaid-preview.showPreviewToSide",
        "title": "Mermaid: Open Preview to the Side",
        "icon": {
          "light": "media/mermaid-gutter.svg",
          "dark": "media/mermaid-gutter.svg"
        }
      },
      {
        "command": "mermaid-preview.showDiagramAtPosition",
        "title": "Mermaid: Preview This Diagram"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mermaid-preview.showPreviewToSide",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "mermaid-preview.showPreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Mermaid Preview",
      "properties": {
        "mermaidPreview.theme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "dark",
            "forest",
            "neutral",
            "base"
          ],
          "enumDescriptions": [
            "Default Mermaid theme",
            "Dark theme",
            "Forest theme",
            "Neutral theme",
            "Base theme"
          ],
          "description": "Default theme for Mermaid diagrams"
        },
        "mermaidPreview.useVSCodeTheme": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync Mermaid theme with VSCode theme (dark/light)"
        },
        "mermaidPreview.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh preview on document changes"
        },
        "mermaidPreview.refreshDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before refreshing preview after changes"
        },
        "mermaidPreview.previewAppearance": {
          "type": "string",
          "default": "matchVSCode",
          "enum": [
            "matchVSCode",
            "light",
            "dark"
          ],
          "enumDescriptions": [
            "Match VS Code's current color theme",
            "Always use the light preview chrome",
            "Always use the dark preview chrome"
          ],
          "description": "Appearance of the preview chrome regardless of VS Code theme"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "deploy": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.0.0",
    "ovsx": "^0.8.4",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "mermaid": "^11.12.2"
  }
}
