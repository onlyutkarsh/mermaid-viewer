{
  "name": "mermaid-diagram-lens",
  "displayName": "Mermaid Diagram Lens",
  "description": "Lens into your Mermaid diagrams with independent theming, exports, and focused previews.",
  "version": "1.0.2",
  "publisher": "onlyutkarsh",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "mermaid",
    "preview",
    "diagram",
    "markdown",
    "theme"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/onlyutkarsh/mermaid-preview-extension.git"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "contributes": {
    "commands": [
      {
        "command": "mermaid-preview.showPreview",
        "title": "Mermaid Diagram Lens: Open Preview",
        "icon": {
          "light": "images/mermaid-gutter.svg",
          "dark": "images/mermaid-gutter.svg"
        }
      },
      {
        "command": "mermaid-preview.showPreviewToSide",
        "title": "Mermaid Diagram Lens: Open Preview to the Side",
        "icon": {
          "light": "images/mermaid-gutter.svg",
          "dark": "images/mermaid-gutter.svg"
        }
      },
      {
        "command": "mermaid-preview.showDiagramAtPosition",
        "title": "Mermaid Diagram Lens: Preview Diagram Here"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mermaid-preview.showPreviewToSide",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "mermaid-preview.showPreview",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Mermaid Diagram Lens",
      "properties": {
        "mermaidLens.theme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "dark",
            "forest",
            "neutral",
            "base"
          ],
          "enumDescriptions": [
            "Default Mermaid theme",
            "Dark theme",
            "Forest theme",
            "Neutral theme",
            "Base theme"
          ],
          "description": "Default theme for Mermaid diagrams"
        },
        "mermaidLens.useVSCodeTheme": {
          "type": "boolean",
          "default": false,
          "description": "Automatically sync Mermaid theme with VSCode theme (dark/light)"
        },
        "mermaidLens.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh preview on document changes"
        },
        "mermaidLens.refreshDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds before refreshing preview after changes"
        },
        "mermaidLens.previewAppearance": {
          "type": "string",
          "default": "matchVSCode",
          "enum": [
            "matchVSCode",
            "light",
            "dark"
          ],
          "enumDescriptions": [
            "Match VS Code's current color theme",
            "Always use the light preview chrome",
            "Always use the dark preview chrome"
          ],
          "description": "Appearance of the preview chrome regardless of VS Code theme"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify && npm run copy-mermaid",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run -S esbuild-base -- --sourcemap && npm run copy-mermaid",
    "esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "copy-mermaid": "shx rm -rf out/mermaid && shx mkdir -p out/mermaid && shx cp -r node_modules/mermaid/dist out/mermaid/",
    "compile": "tsc -p ./ && npm run copy-mermaid",
    "watch": "npm run copy-mermaid && tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "deploy": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "ovsx": "^0.10.7",
    "rimraf": "^6.1.2",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "mermaid": "^11.12.2"
  }
}
